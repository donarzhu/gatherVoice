<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aicyber.gathervoice.MyTaskFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@color/black"
            app:tabIndicatorHeight="4dp"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium"
            app:tabSelectedTextColor="@color/holo_blue_bright"
            app:tabTextColor="@color/gray"
            app:tabIndicatorColor="@color/holo_blue_bright"
            >

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="语音任务" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="校对任务" />
        </android.support.design.widget.TabLayout>

        <ListView
            android:id="@+id/my_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_back"
            tools:context="com.aicyber.gathervoice.TaskCenterFragment" />
    </LinearLayout>
</FrameLayout>
